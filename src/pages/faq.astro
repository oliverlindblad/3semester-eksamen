---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import Footer from "../components/Footer.astro";
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import HorizontalAccordion from "../components/HorizontalAccordion.astro";
import Accordion from "../components/Accordion.astro";
import Countdown from '../components/Countdown.astro';
---


<MainLayout title="FAQ">
  <section class="px-4 py-16 max-w-6xl mx-auto">
    {[
      { title: "FØR LØBET" },
      { title: "UNDER LØBET" },
      { title: "EFTER LØBET" },
    ].map(({ title }) => (
      <div class="mb-12">
        {/* Sektionstitel */}
        <h2 class="font-bebas text-3xl text-orange-700 text-center mb-6">
          {title}
        </h2>

        {/* Grid: 1 kolonne på mobil, 2 på md+ */}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {/* 2 kolonner med hver 3 spørgsmål */}
          {[0, 1].map(() => (
            <div class="flex flex-col space-y-4">
              <Accordion
                overskrift="HCA Marathon"
                tekst="Her kan du læse om HCA Marathon-flowet før, under og efter løbet."
              />
              <Accordion
                overskrift="Startnummer"
                tekst="Sådan modtager og bruger du dit startnummer."
              />
              <Accordion
                overskrift="Ændring i din tilmelding"
                tekst="Du kan rette afstand, tilmeldingstype eller deltagerinfo indtil deadline."
              />
            </div>
          ))}
        </div>
      </div>
    ))}

    {/* Kontakt os */}
    <div class="border-t border-gray-300 pt-12">
      <h2 class="font-bebas text-3xl text-orange-700 mb-6">KONTAKT OS</h2>
      <form class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {/* Venstre kolonne: navn, email, besked */}
        <div class="flex flex-col space-y-4">
          <input type="text" placeholder="Navn" class="border-b border-gray-400 pb-2 focus:outline-none" />
          <input type="email" placeholder="Email" class="border-b border-gray-400 pb-2 focus:outline-none" />
          <textarea rows="3" placeholder="Hvordan kan vi hjælpe dig?" class="border-b border-gray-400 pb-2 focus:outline-none"></textarea>
        </div>
        {/* Højre kolonne: email-genbrug, filupload */}
        <div class="flex flex-col space-y-4">
          <input type="email" placeholder="Din email igen" class="border-b border-gray-400 pb-2 focus:outline-none" />
          <label class="flex items-center border-dashed border-2 border-gray-400 p-4 cursor-pointer">
            <span>Upload fil (valgfrit)</span>
            <input type="file" class="hidden" />
          </label>
        </div>
        {/* Send-knap */}
        <button type="submit" class="col-span-full bg-orange-700 text-white py-3 font-bold rounded mt-4 hover:bg-orange-600">
          SEND
        </button>
      </form>
    </div>

    {/* Subscribe */}
    <div class="mt-16 text-center">
      <h2 class="font-bebas text-3xl text-orange-700 mb-4">
        SUBSCRIBE <span class="font-normal">for at modtage eksklusive</span> NYHEDER
      </h2>
      <div class="flex justify-center items-center gap-2">
        <input type="email" placeholder="email@example.com" class="border-b border-gray-400 pb-2 w-64 focus:outline-none" />
        <button class="bg-orange-700 text-white px-6 py-2 font-bold rounded hover:bg-orange-600">
          SEND
        </button>
      </div>
    </div>
  </section>

  <Footer />
</MainLayout>
