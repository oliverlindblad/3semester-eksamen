---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import Footer from "../components/Footer.astro";
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import HorizontalAccordion from "../components/HorizontalAccordion.astro";
import Accordion from "../components/Accordion.astro";
import Countdown from '../components/Countdown.astro';
import Banner from '../components/Banner.astro';

---

<MainLayout title="FAQ">
  <section class="block md:hidden w-full relative text-center px-4 py-6 pt-30">
    <h1 class="text-9xl sm:text-3xl font-bebas text-orange-700">
      FAQ
    </h1>
  </section>
  <section class="hidden md:block relative w-full h-[200vh] scroll-container">
    <!-- Sticky container -->
    <div class="sticky top-0 w-full h-screen flex items-center justify-center">
      <!-- Indhold -->
      <div class="relative w-[90vw] max-w-4xl aspect-[16/9]">
        
        <!-- Baggrundsbillede -->
        <img 
          src="/billede2-faq-sort_hvid.webp"
          alt="FAQ baggrund"
          class="absolute inset-0 w-full h-full object-cover object-center scroll-video will-change-transform"
        />
  
        <!-- Tekst -->
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none z-20 scrollzoom">
          <h1 class="text-orange-700 font-bebas text-[20vw] md:text-[15rem] leading-none drop-shadow-md scrollzoomimg will-change-transform">
            FAQ
          </h1>
        </div>
  
      </div>
    </div>
  </section>
  <script type="module">
    import { animate, scroll } from "https://cdn.jsdelivr.net/npm/motion@latest/+esm";
  
    if (window.innerWidth >= 768) {
      // BILLEDE: zoom
      scroll(
        animate(".scrollzoomimg", {
          scale: [1.2, 1.6]
        }, { easing: "ease-in-out" }),
        {
          target: document.querySelector(".scroll-container"),
          offset: ["start start", "end start"]
        }
      );
  
      // VIDEO: zoom + y-flyt
      scroll(
        animate(".scroll-video", {
          scale: [1, 1.2],
          y: ["10px", "-60px"]
        }, { easing: "ease-in-out" }),
        {
          target: document.querySelector(".scroll-container"),
          offset: ["start start", "end start"]
        }
      );
    }
  </script>
    
  
  



  <section class="px-4 py-16 max-w-6xl mx-auto">
    <!-- FØR LØBET -->
    <div class="mb-12 section-before-run">
      <h2 class="font-oswald text-3xl md:text-5xl text-orange-700 text-center mb-6">
        FØR LØBET
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8">
        <div class="flex flex-col space-y-4 scroll-left">
          <Accordion
            overskrift="HCA Marathon"
            tekst="Den fynske hovedstad har siden H. C. Andersens været hjem for mange eventyrfortællinger, og siden år 2000 har der været skrevet utallige løbeeventyr i byen under HCA Marathon. Vil du skrive dit eget løbeeventyr, så er HCA Marathon det perfekte sted med en hurtig og trafikfri rute i Odenses gader. Flere har sat personlige rekorder på ruten, og i 2019 blev HCA Marathon kåret som verdens hurtigste maraton (målt ud fra gennemsnitlig sluttid). Så har du en rekord i kikkerten, så er HCA Marathon det helt rigtige sted at kigge hen for ruten er bare hurtig. Du kan læse mere om undersøgelsen hos Runners World."
          />
          <Accordion
            overskrift="Startnummer"
            tekst="Startnumre skal afhentes på sportsmessen i Odense Idrætspark, Israels Plads 3 – Odense V. Fredag kl. 14.00-18.00 Lørdag kl. 10.00-16.30 Søndag kl. 8.00-09.30. På dit startnummer sidder chippen til tidtagning – undgå at bøje startnummeret, så chippen ikke tager skade. BEMÆRK Du må ikke ændre på startnummeret, da det er diskvalifikationsgrundlag jvf. DAF-reglerne. Bliv ligeledes på den afmærkede rute, da der er udlagt måtter til måling af mellemtider. Manglende mellemtider medfører diskvalifikation."
          />
          <Accordion
            overskrift="Ændring i din tilmelding"
            tekst="Har du ændringer til din tilmelding såsom at ændre navn, distance eller overdrage til en anden, så beder vi dig om at få det rettet, så resultatlisten kan blive korrekt for alle løbere. Du kan selv foretage ændringerne online "
          />
        </div>
        <div class="flex flex-col space-y-4 scroll-right">
          <Accordion
            overskrift="Sportsmesse - fri entré"
            tekst="Sportsmessen foregår i Odense Idrætspark, Israels Plads 3 – Odense V. Fredag 26. september kl. 14.00-18.00 Lørdag 27. september kl. 10.00-16.30 Søndag 28. september kl. 8.00-16.00"
          />
          <Accordion
            overskrift="Parkering"
            tekst="Bilister opfordres til at komme i god tid på løbsdagen og benytte parkeringspladserne på de omkringliggende veje til Odense Idrætspark. Husk at tjekke skiltningen, da der nogle steder er tidsbegrænset parkering eller påkrævet betaling."
          />
          <Accordion
            overskrift="Bagageopbevaring"
            tekst="Ved afhentning af startnummer får du udleveret en racebag, som du skal bruge til at få opbevaret din bagage i. Bagageopbevaringen er bemandet i Odense Idrætspark (hal 2) og er åben på løbsdagen kl. 8.00 – 16.30 og kun til den udleverede racebag. HUSK at sætte slippen fra dit startnummer på din racebag. Har du mere bagage med, end der kan være i den udleverede racebag, er der ekstra bagageopbevaring i teltet på p-pladsen ved Nature Energy Park fra kl. 08.00 – 16.30 (kr. 25 pr. stk./kontant eller mobilepay). Har du bagage til “Løb de sidste 10”, er der også mulighed for bagage-indlevering ved starten på Flakhaven ved Odense Rådhus. Bagagen bliver fragtet til Odense Idrætspark. "
          />
        </div>
      </div>
    </div>

    <!-- UNDER LØBET -->
    <div class="mb-12 section-during-run pt-10 md:pt-20">
      <h2 class="font-oswald text-3xl md:text-5xl text-orange-700 text-center mb-6">
        UNDER LØBET
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8">
        <div class="flex flex-col space-y-4 scroll-left">
          <Accordion
            overskrift="Starten - startgrupper"
            tekst="I startområdet er der opsat skilte med forventede sluttid. For at give alle den bedste oplevelse bedes du stille dig ud for den sluttid, som du forventer at løbe på. FASTRUNNERS Marathon Hvis du kan løbe 42,195 km under 3.00, kan du få en startplads forrest i feltet. FASTRUNNERS ½ Marathon Hvis du kan løbe 21,097 km  under 1.30, kan du få en startplads forrest i feltet. Få dit fastrunner mærke. Det kræver blot, at du henvender dig i informationen i Odense Idrætspark senest søndag 8.30 med dit startnummer og fremviser dokumentation for en hurtig tid fra et officielt løb af samme distance indenfor de seneste 2 år. Så får du et klistermærke til startnummeret, så du kan komme ind i forreste startgruppe. Efterladt tøj i startområdet vil kort tid efter starten blive samlet sammen og efterfølgende afleveret til Røde Kors."
          />
          <Accordion
            overskrift="Ruten"
            tekst="Ruten er en 21,097 km rundstrækning gennem Odenses gader. Vi har sørget for masser af musik langs ruten og en masse tilskuere, der er klar til at heppe på dig. Så både derfor og af sikkerhedsmæssige grunde er det ikke tilladt at løbe med musik i ørerne. Officials og vejvisere vil nemlig rigtig gerne kunne komme i kontakt med dig. Så drop musikken og nyd stemningen. På ruten er der cyklende samaritter. Udgår du af løbet og har brug for transport til målområdet, går du til nærmeste depot, som sørger for din transport til målområdet. Ruten er DAF-IAAF opmålt og godkendt af A.I.M.S. "
          />
          <Accordion
            overskrift="Tidtagning"
            tekst="SÅDAN REGISTRERES DIN TID MED CHIP: Sluttiden bliver registret automatisk med chip, som sidder på bagsiden af dit startnummer. Brutto tid: Fra startskuddet lyder til du løber i mål. Netto tid: Fra du passerer startstregen, til du løber i"
          />
        </div>
        <div class="flex flex-col space-y-4 scroll-right">
          <Accordion
            overskrift="Høretelefoner"
            tekst="Høretelefoner er ikke tilladt under løbet af sikkerhedsmæssige årsager. Da ruten er det et rundeløb, er det vigtigt at alle løbere kan høre anvisninger fra officials, cykelryttere og andre løbere, der skal overhale. I stedet kan du nyde de grønne områder og summen af byen."
          />
          <Accordion
            overskrift="Servicezoner"
            tekst="Fire store depoter ved ca. km 5 – 10 – 15 – 20 Egen forplejning Energidrik i High5 krus Kildevand i hvide krus Bananer fra km 15 Fire små depoter ved ca. km 2,5 – 7,5 – 12,5 – 17,5 Energidrik i High5 krus Kildevand i hvide krus."
          />
          <Accordion
            overskrift="Egen forplejning"
            tekst="Har du egen-forplejning med, kan dette afleveres i Odense Idrætspark (forhallen) lørdag kl. 14.00 – 16.30 og søndag kl. 8.00 – 8.30 i de opstillede kasser. Forplejningen bliver derefter bragt ud til depoterne på ruten og vil stå på de første borde i alle depoter. Startnummer 1 – 500 på det første bord og fra startnummer 501 på det næste bord. Egen-forplejning er mulig for både Marathon og ½ Marathon deltagerne. Husk at mærke forplejningen, så du selv kan finde det på depoterne ude på ruten."
          />
        </div>
      </div>
    </div>

    <!-- EFTER LØBET -->
    <div class="mb-12 section-after-run pt-10 md:pt-20">
      <h2 class="font-oswald text-3xl md:text-5xl text-orange-700 text-center mb-6">
        EFTER LØBET
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8">
        <div class="flex flex-col space-y-4 scroll-left">
          <Accordion
            overskrift="Mål"
            tekst="Du løber de sidste 300 meter på Odense Atletikstadion. Den inderste bane er til Marathon. Den yderste bane er til ½ Marathon, “Løb de sidste 10” og MiniMarathon."
          />
          <Accordion
            overskrift="Medalje"
            tekst="Umiddelbart efter passage af mål vil du få udleveret din velfortjente medalje. Når dette er sket, forlades målområdet for at gå til måldepotet. Gravering af medalje -Har du tilkøbt gravering af din medalje, som en del af din deltagelse ved HCA Marathon, får du medaljen graveret på løbsdagen i forhallen i Odense Idrætspark. Medbring dit startnr. og medalje samt hav din tid klar (på mobilen) – dit startnr. er kvittering for graveringen. For at alle kan få deres medalje graveret og med hjem, bedes du henvende dig i forhallen senest kl. 15.30 med medaljen. Har du ikke bestilt gravering på forhånd, kan dette tilkøbes på dagen, i det omfang der er ledig kapacitet til gravering. OBS! Har du ikke gennemført din tilmeldte distance, så modtager ingen medalje og din tid registreres som ikke-gennemført. "
          />
          <Accordion
            overskrift="Måldepot"
            tekst="-Heineken 0,0% -Actimel fra Danone -Faxe Kondi PRO (MiniMarathon: Faxe Kondi) -Kildevand -Frugt -Müslibar. Når du først har forladt måldepotet, er det ikke muligt at komme tilbage. MiniMarathon Efter mål bliver deltagerne ledt videre til teltet “MiniMarathon”, som fungerer som måldepot. Teltet er placeret ved siddetribunen. I måldepotet tilbydes bl.a. kildevand, frugt, müslibar og dessert fra Danone. Forældre har IKKE adgang til måldepotet, men kan mødes med børnene efter måldepotet."
          />
        </div>
        <div class="flex flex-col space-y-4 scroll-right">
          <Accordion
            overskrift="Front Food"
            tekst="Forskellige salgsboder med mad og drikkevarer vil være at finde på løbsdagen ved hovedindgangen til Odense Idrætspark. Mens du nyder lidt godt til ganen, kan du følge målgangen på storskærm (med 45 minutters forsinkelse). "
          />
          <Accordion
            overskrift="Massage"
            tekst="Efter måldepotet møder du massage-teltet på p-pladsen ved Hal 2, hvor fysioterapeutstuderende fra UCL står klar til at løsne de brugte muskler op. Det er helt gratis at få massage efter løbet. "
          />
          <Accordion
            overskrift="Gennemførsel af Den Fynske Udfordring"
            tekst="Den Fynske Udfordring Har du gennemført den Fynske udfordring (gennemført Lillebælt Halvmarathon, Fynske Bank De 3 Broer og HCA Marathon eller HCA ½ Marathon) og løbet med guld nummer, får du din Fynske Udfordring medalje udleveret på HCA Marathons stand på sportsmessen efter du er kommet i mål."
          />
        </div>
      </div>
    </div>

    <script type="module">
     import { animate, scroll } from "https://cdn.jsdelivr.net/npm/motion@latest/+esm";

if (window.innerWidth >= 768) {

  // FØR LØBET
  scroll(
    animate(".section-before-run .scroll-left", {
      opacity: [0, 1],
      x: [-100, 0]
    }, { duration: 0.8, easing: "ease-out" }),
    {
      target: document.querySelector(".section-before-run"),
      offset: ["start 90%", "start 60%"]
    }
  );

  scroll(
    animate(".section-before-run .scroll-right", {
      opacity: [0, 1],
      x: [100, 0]
    }, { duration: 0.8, easing: "ease-out" }),
    {
      target: document.querySelector(".section-before-run"),
      offset: ["start 90%", "start 60%"]
    }
  );

  // UNDER LØBET
  scroll(
    animate(".section-during-run .scroll-left", {
      opacity: [0, 1],
      x: [-100, 0]
    }, { duration: 0.8, easing: "ease-out" }),
    {
      target: document.querySelector(".section-during-run"),
      offset: ["start 90%", "start 60%"]
    }
  );

  scroll(
    animate(".section-during-run .scroll-right", {
      opacity: [0, 1],
      x: [100, 0]
    }, { duration: 0.8, easing: "ease-out" }),
    {
      target: document.querySelector(".section-during-run"),
      offset: ["start 90%", "start 60%"]
    }
  );

  // EFTER LØBET
  scroll(
    animate(".section-after-run .scroll-left", {
      opacity: [0, 1],
      x: [-100, 0]
    }, { duration: 0.8, easing: "ease-out" }),
    {
      target: document.querySelector(".section-after-run"),
      offset: ["start 90%", "start 60%"]
    }
  );

  scroll(
    animate(".section-after-run .scroll-right", {
      opacity: [0, 1],
      x: [100, 0]
    }, { duration: 0.8, easing: "ease-out" }),
    {
      target: document.querySelector(".section-after-run"),
      offset: ["start 90%", "start 60%"]
    }
  );

}

    </script>
    

    <!-- KONTAKT OS -->
    <div class="pt-20">
      <h2 class="font-bebas text-7xl md:text-8xl text-orange-700">KONTAKT OS</h2>
      <p class="font-instrument text-lg text-black mb-6">
        Fik du ikke svar på dit spørgsmål i FAQ’en, så tøv ikke med at kontakte os!<br>
        Vi bestræber os på at besvare din henvendelse så hurtigt vi kan.
      </p>
    
      <form class="grid grid-cols-1 lg:grid-cols-2 gap-4  font-instrument pb-6 mb-8">
        <!-- Venstre kolonne -->
        <div class="flex flex-col space-y-4 text-black">
          <input
            type="text"
            placeholder="Navn"
            class="border-b border-neutral-400 pb-2 
                   focus:outline-none focus:border-orange-700 focus:ring-0"
          />
          <input
            type="text"
            placeholder="Emne"
            class="border-b border-neutral-400 pb-2 
                   focus:outline-none focus:border-orange-700 focus:ring-0"
          />
          <textarea
            rows="3"
            placeholder="Hvordan kan vi hjælpe dig?"
            class="border-b border-neutral-400 pb-2 resize-none
                   focus:outline-none focus:border-orange-700 focus:ring-0"
          ></textarea>
        </div>
    
        <!-- Højre kolonne -->
        <div class="flex flex-col space-y-4">
          <input
            type="email"
            placeholder="Email"
            class="border-b border-neutral-400 pb-2 
                   focus:outline-none focus:border-orange-700 focus:ring-0"
          />
          <!-- Upload-label centreret -->
          <label
            class="flex items-center justify-center border-dashed border-2 border-neutral-400 p-15 cursor-pointer"
          >
            <span class="font-instrument text-base text-neutral-500">UPLOAD FILER (valgfrit)</span>
            <input type="file" class="hidden" />
          </label>
        </div>
    
        <!-- Centreret send-knap -->
        <div class="col-span-full flex justify-center">
          <Button text="SEND" />
        </div>
      </form>
    </div>
    
    

    <!-- SUBSCRIBE -->
    <div class="mt-16 px-4 pt-20">
      <!-- Overskrift -->
      <h2 class="font-bebas text-3xl md:text-6xl text-orange-700 mb-4 text-center md:text-right">
        SUBSCRIBE 
        <span class="font-bebas text-black text-xl md:text-2xl">for at</span>  
        modtage 
        <span class="font-bebas text-black text-xl md:text-2xl">eksklusive</span>
      </h2>
    
      <!-- Input, button og "NYHEDER" i én række også på mobil -->
      <div class="flex flex-row flex-wrap items-center justify-center gap-2 md:justify-end">
        <input
          type="email"
          placeholder="email@example.com"
          class="border-b font-instrument text-black border-neutral-400 
                 w-27 sm:w-56 md:w-60
                 focus:outline-none focus:border-orange-700 focus:ring-0
                 text-sm sm:text-base md:text-xl py-1"
        />
    
        <Button text="SUBSCRIBE" />
    
        <span class="font-bebas text-3xl sm:text-2xl md:text-6xl">NYHEDER</span>
      </div>
    
      <!-- Checkbox under -->
      <div class="mt-4 flex justify-start pl-2 md:justify-center md:pl-70">
        <fieldset class="font-instrument">
          <label class="flex items-center space-x-2 text-neutral-400 text-xs">
            <input
              type="checkbox"
              checked
              class="appearance-none w-4 h-4 border border-neutral-400 bg-white 
                     checked:bg-orange-700 
                     focus:outline-none focus:ring-2 focus:ring-neutral-50 focus:ring-offset-0"
            />
            <span>Jeg samtykker til at modtage markedsføring via e-mail</span>
          </label>
        </fieldset>
      </div>
    </div>
    
    <div class="pt-35 md:pt-30">
    <Banner/>
    </div>
    
  </section>

  <Footer />
</MainLayout>
