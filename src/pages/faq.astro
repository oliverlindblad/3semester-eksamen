---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import HorizontalAccordion from "../components/HorizontalAccordion.astro";
import Accordion from "../components/Accordion.astro";
import Countdown from '../components/Countdown.astro';
---


<MainLayout title="Titel">
	
							


    <div class="join join-vertical w-full max-w-xl mx-auto bg-base-100 mt-8 px-4">
        <Accordion
          overskrift="Hvordan opretter jeg en konto?"
          tekst="Klik på 'Opret konto' og følg flowet."
        />
        <Accordion
          overskrift="Hvordan ændrer jeg mit kodeord?"
          tekst="Gå til din profil og klik 'Skift kodeord'."
        />
        <Accordion
          overskrift="Hvordan kontakter jeg support?"
          tekst="Brug kontaktformularen nederst på siden."
        />
      </div>


											
</MainLayout>
