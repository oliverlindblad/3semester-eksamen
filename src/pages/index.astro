---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import Footer from "../components/Footer.astro";
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import HorizontalAccordion from "../components/HorizontalAccordion.astro";
import Accordion from "../components/Accordion.astro";
import Countdown from '../components/Countdown.astro';
import Banner from '../components/Banner.astro';
import Card from '../components/Card.astro';
---


<MainLayout title="Titel">
	<!-- 1) Video-sektionen alene -->
<section
  class="relative max-w-[900px] w-full h-[600px] mx-auto overflow-hidden mt-2"
  style="aspect-ratio:16/9;"
>
  <video
    autoplay
    muted
    loop
    class="absolute inset-0 w-full h-full object-cover"
  >
    <source src="/HCA-Marathon-NY.mp4" type="video/mp4" />
  </video>
</section>

<!-- 2) Overskrifts-billedet UDENFOR videoen -->
<div
  class="relative w-full flex justify-center pointer-events-none
         -mt-[500px]  /* trækker billedet op over videoen */
         z-10"
>
  <img
    src="public/hca-marathon-endelig-version.png"
    alt="Udforsk ruten"
    class="
      w-[120%]        /* 120% på mobil */
      sm:w-[140%]     /* 140% fra small screens */
      md:w-[160%]     /* 160% fra medium screens */
      lg:w-[100%]     /* 180% fra large screens */
      max-w-250
      object-contain
    "
  />
</div>

<!-- 3) Tilmeldings-sektionen under -->
<section class="text-center max-w-[900px] w-full mx-auto mt-30 px-4">
  <p class="text-xl md:text-2xl font-semibold text-[#B64014]">21,097 KM</p>
  <a href="/tilmelding" class="text-[#B64014] underline block mt-1">Tilmeld dig</a>
  
</section>
	
							




<Countdown targetDate="2025-08-04T09:30:00" />

<Banner/>

<Card

cardimage="public/billede7.webp"
cardimagealt="forplejningszoner"
cardtitel="Forplejningszoner"
cardtekst="Forplejningszonerne i HCA Marathon byder på vand, energidrik og snacks. De er jævnt fordelt langs ruten og bemandet af frivillige."
></Card>

<Footer/>

											
</MainLayout>
