---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import Footer from "../components/Footer.astro";
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import HorizontalAccordion from "../components/HorizontalAccordion.astro";
import Accordion from "../components/Accordion.astro";
import Countdown from '../components/Countdown.astro';
import Banner from '../components/Banner.astro';
import Card from '../components/Card.astro';
---


<MainLayout title="Titel">
  <!-- START HERO SECTION -->
  <section>
  <section
  class="
    relative 
     w-[90vw] md:w-full max-w-[900px] mx-auto 
    overflow-hidden 

    /* margin top/bund og padding på mobil/tablet */
    mt-6 mb-6 px-4 
    sm:mt-8 sm:mb-8 sm:px-5 
    md:mt-2 md:mb-2 md:px-0 
  "
  style="aspect-ratio:16/9;"
>
  <video
    autoplay
    muted
    loop
    class="absolute inset-0 w-full h-full object-cover"
  >
    <source src="/HCA-Marathon-NY.mp4" type="video/mp4" />
  </video>
</section>

<!-- 2) Overskrifts-billedet UDENFOR videoen -->
<div
  class="relative w-full flex justify-center pointer-events-none z-10
         -mt-[200px]   /* mobil: mindre overlap */
         sm:-mt-[350px] /* small screens */
         md:-mt-[450px] /* medium+ (desktop original) */
  "
>
  <img
    src="/hca-marathon-endelig-version.png"
    alt="Udforsk ruten"
    class="
      w-[100%]        /* mobil: fyld boksen */
      sm:w-[120%]     /* small screens */
      md:w-[140%]     /* medium screens */
      lg:w-[160%]     /* large screens (desktop original) */
      max-w-250
      object-contain
    "
  />
</div>
	
</section>
<!-- SLUT HERO SECTION -->

<!-- START CARUSEL SECTION -->
<section 
  x-data="{
    activeIndex: 0,
    items: [
      { img: '/billede3.webp', title: 'LØB DE SIDSTE 10' },
      { img: '/billede5.webp', title: 'HCA MARATHON' },
      { img: '/billede4.webp', title: 'DM MARATHON' },
      { img: '/billede2.webp', title: 'HALV MARATHON' }
    ]
  }"
  class="relative max-w-6xl mx-auto px-4 pt-20"
>
  <!-- Header -->
  <div class="flex items-center justify-between mb-6">
    <h2 class="font-bebas text-3xl md:text-5xl text-orange-700">
      TILMELDINGSMULIGHEDER
    </h2>
    <div class="flex items-center gap-2">
      <button 
        @click="activeIndex = (activeIndex - 1 + items.length) % items.length"
        class="text-black hover:text-orange-700 text-xl"
      >
        ←
      </button>
      <button 
        @click="activeIndex = (activeIndex + 1) % items.length"
        class="text-black hover:text-orange-700 text-xl"
      >
        →
      </button>
    </div>
  </div>

  <!-- Carousel track -->
  <div class="overflow-hidden relative">
    <div 
      class="flex transition-transform duration-500"
      :style="`transform: translateX(-${activeIndex * 100}%); width: ${items.length * 100}%`"
    >
      <template x-for="(item, index) in items" :key="index">
        <div class="w-full flex-shrink-0 px-4 text-center">
          <div class="group">
            <img 
              :src="item.img"
              :alt="item.title"
              class="mx-auto h-56 sm:h-64 md:h-72 object-cover transition duration-300 group-hover:grayscale-0 grayscale"
            />
            <div 
              class="mt-2 font-bebas text-orange-700 text-xl relative"
              :class="{ 'underline underline-offset-4 decoration-2': index === activeIndex }"
              x-text="item.title"
            ></div>
          </div>
        </div>
      </template>
    </div>
  </div>

  <!-- Progress bar -->
  <div class="relative mt-4 h-1 bg-neutral-300">
    <div 
      class="absolute top-0 left-0 h-full bg-orange-700 transition-all duration-300"
      :style="`width: ${(100 / items.length) * (activeIndex + 1)}%`"
    ></div>
  </div>
</section>


 <!-- SLUT CARUSEL SECTION -->





<Card

cardimage="public/billede7.webp"
cardimagealt="forplejningszoner"
cardtitel="Forplejningszoner"
cardtekst="Forplejningszonerne i HCA Marathon byder på vand, energidrik og snacks. De er jævnt fordelt langs ruten og bemandet af frivillige."
></Card>

<Footer/>

											
</MainLayout>
