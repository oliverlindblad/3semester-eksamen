---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import Footer from "../components/Footer.astro";
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import HorizontalAccordion from "../components/HorizontalAccordion.astro";
import Accordion from "../components/Accordion.astro";
import Countdown from '../components/Countdown.astro';
import Banner from '../components/Banner.astro';
import Card from '../components/Card.astro';
import Login from "../components/Login.astro";
---
<MainLayout title="Forside">
  <Login>
  
  </Login>
  
  <!-- START HERO SECTION -->
<!-- MOBILE: statisk billede med titel -->
<section class="block md:hidden w-full relative text-center px-4 py-6 pt-30 md:pt-20">
  <h1 class="text-7xl sm:text-3xl font-bebas text-orange-700">
    HCA MARATHON
  </h1>
  <img
    src="/dm-marathon.png"
    alt="Udforsk ruten"
    class="w-full object-cover mb-4"
  />
 
</section>


<!-- DESKTOP: scrollytelling -->
<section class="hidden md:block relative w-full h-[200vh] scroll-container">
  <div class="sticky top-0 w-full h-screen flex items-center justify-center" id="scroll-video">
    <div class="relative w-[90vw] max-w-[900px] aspect-[16/9]">
      
      <!-- Video -->
      <video
        autoplay muted loop playsinline
        class="absolute inset-0 w-full h-full object-cover scroll-video will-change-transform"
      >
        <source src="/HCA-Marathon-NY.mp4" type="video/mp4" />
      </video>

      <!-- Billede -->
      <div class="absolute inset-0 flex justify-center items-end pointer-events-none z-20 scrollzoom">
        <img
          src="/hca-marathon-endelig-version.png"
          alt="Udforsk ruten"
          class="scrollzoomimg w-full sm:w-[120%] md:w-[140%] lg:w-[160%] object-contain translate-y-[-70px] will-change-transform"
        />
      </div>

    </div>
  </div>
</section>


  <script type="module">
    import { animate, scroll } from "https://cdn.jsdelivr.net/npm/motion@latest/+esm";
  
    if (window.innerWidth >= 768) {
      // BILLEDE: zoom
      scroll(
        animate(".scrollzoomimg", {
          scale: [1.2, 1.6]
        }, { easing: "ease-in-out" }),
        {
          target: document.querySelector(".scroll-container"),
          offset: ["start start", "end start"]
        }
      );
  
      // VIDEO: zoom + y-flyt
      scroll(
        animate(".scroll-video", {
          scale: [1, 1.2],
          y: ["10px", "-60px"]
        }, { easing: "ease-in-out" }),
        {
          target: document.querySelector(".scroll-container"),
          offset: ["start start", "end start"]
        }
      );
    }
  </script>
  
<!-- SLUT HERO SECTION -->
 





<!-- START CAROUSEL SECTION -->
 <section>
<div class="py-8 relative pt-20 md:pt-30 w-screen">  
  <h2 class="text-orange-700 text-4xl md:text-8xl font-bebas mb-3 md:mb-4 pl-4 md:pl-5">tilmeld dig herunder</h2>
  
  <!-- Carousel fylder hele skærmen -->
  <div
    id="carousel"
    class="overflow-x-auto scroll-smooth snap-x snap-mandatory flex">
    <!-- Slide 1 -->
    <div class="group snap-center flex-shrink-0 w-3/4 sm:w-1/2 md:w-1/3 px-4 cursor-pointer">
      <div class="w-full h-48 md:h-64 lg:h-72 overflow-hidden">
         <a
          href="https://www.sportstiming.dk/event/15085" target="_blank">
        <img
          src="/loeb-de-sidste-10.png"
          alt="løb de sidste 10"
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110 group-hover:grayscale-100"
        />
      </a>
      </div>
      <div class="mt-2 font-oswald text-lg md:text-xl pl-2">
        <a
          href="https://www.sportstiming.dk/event/15085" target="_blank"
          class="block text-orange-700 transition-colors duration-300 group-hover:grayscale-100 group-hover:underline underline-offset-4"
