---
const { overskrift = "Overskrift", tekst = "Tekst" } = Astro.props;
const id = crypto.randomUUID();
---

<div class="w-full max-w-xl mx-auto">
  <div class="border-b border-black">
    <input type="checkbox" id={id} class="peer hidden" />

    <!-- overskrift + pil -->
    <label
      for={id}
      class="flex justify-between items-center px-4 py-3 font-oswald cursor-pointer text-base sm:text-lg"
    >
      <span>{overskrift}</span>

      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 transition-transform origin-center duration-300 peer-checked:rotate-180"
        fill="none"
        viewBox="0 0 24 24"
        stroke="black"
        stroke-width="2"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    </label>

    <!-- indhold: skjult (ingen padding) → vises med padding og højde -->
    <div
      class="px-0 pb-0 max-h-0 overflow-hidden
             transition-[max-height,padding] duration-500 ease-in-out
             peer-checked:max-h-96 peer-checked:px-4 peer-checked:pb-4
             font-instrument text-sm sm:text-base text-orange-700 leading-relaxed"
    >
      {tekst}
    </div>
  </div>
</div>
