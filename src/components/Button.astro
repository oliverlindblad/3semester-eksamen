---
// Props med defaults
const { size = "md", color = "orange", href = "#", id ="", invisible = "TILMELD" , text = "TILMELD", } = Astro.props;

// Minimal opslags-tabeller
const sizes = {
  sm: "h-7  px-4 py-1 text-sm",
  md: "h-10 px-6 py-2 text-lg",
  lg: "h-11 px-12 py-4 text-2xl",
  xl: "h-10 px-16 py-4 text-lg",
};

const colors = {
  orange: "bg-orange-700 text-orange-50",
  white : "bg-orange-50  text-orange-700 text-3xl",
};

// Saml Tailwind-klasserne
const cls = `
  relative inline-block overflow-hidden font-instrument group
  ${sizes[size]} ${colors[color]}
`.replace(/\s+/g, " ");
---

<a href={href} id={id} class={cls}>
  <!-- Placeholder holder bredden -->
  <span class="invisible select-none"> {invisible}<slot /></span>

  <!-- Centreret flex-lag -->
  <span class="absolute inset-0 flex items-center justify-center">
    <!-- Udgående tekst -->
    <span class="transition-transform duration-300 ease-in-out group-hover:-translate-y-full">
      {text}<slot />
    </span>

    <!-- Indgående tekst -->
    <span
      class="absolute flex items-center justify-center translate-y-full transition-transform
             duration-300 ease-in-out group-hover:translate-y-0">
      <span class="relative">
        {text}<slot />
        <!-- Underline -->
        <span
          class="absolute left-0 bottom-0 h-px w-0 bg-current transition-all duration-300
                 group-hover:w-full" />
      </span>
    </span>
  </span>
</a>



