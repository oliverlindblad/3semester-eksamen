---
const sponsors = [
  { name: "danbolig", src: "/danbolig_ny.png", alt: "Danbolig logo" },
  { name: "rema", src: "/rema.png", alt: "Rema logo" },
  { name: "tempur", src: "/tempur.png", alt: "Tempur logo" },
  { name: "fyens", src: "/fyens_stillads_ny.png", alt: "Fyens Stillads logo" },
  { name: "europcar", src: "/europcar_ny.png", alt: "Europcar logo" },
  { name: "dripa", src: "/dripa_ny.png", alt: "Dripa logo" },
  { name: "albani", src: "/albani_ny.png", alt: "Albani logo" },
];
const loop = [...sponsors, ...sponsors];
---

<div class="w-screen relative left-1/2 -translate-x-1/2 overflow-hidden border-y border-black py-6">
  <div class="flex items-center flex-nowrap gap-20 animate-marquee min-w-max px-4">
    {loop.map((sponsor, i) => (
      <div
        key={i}
        class="flex-shrink-0
               w-32     sm:w-40     md:w-52      /* bredde pr. logo */
               flex items-center justify-center"
      >
        <img
          src={sponsor.src}
          alt={sponsor.alt}
          class="h-16    sm:h-20    md:h-24      /* hÃ¸jde pr. logo */
                 w-auto object-contain animate-logo"
          loading="lazy"
        />
      </div>
    ))}
  </div>
</div>

<style>
@keyframes marquee {
  0%   { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
.animate-marquee {
  animation: marquee 30s linear infinite;
}

@keyframes pulse-logo {
  0%,100% { transform: scale(1); }
  50%     { transform: scale(1.05); }
}
.animate-logo {
  animation: pulse-logo 5s ease-in-out infinite;
}
</style>
