---
// src/components/HorizontalAccordion.astro
// Props: items = [{ src, alt, label }]
const { items } = Astro.props;
---
<div
  class="flex flex-col md:flex-row justify-center items-center
         mx-4 sm:mx-8 md:mx-16 overflow-hidden
         transform md:skew-x-6 lg:skew-x-6 transition"
>
  {items.map((item, i) => (
    <div
      key={i}
      class="
        group
        flex-1
        h-[60vh] sm:h-[70vh] md:h-[75vh]
        min-h-[200px]
        relative
        mr-4 last:mr-0
        transition-[flex-grow] duration-1000 ease-in-out
        hover:flex-grow-[10]
      "
    >
      <img
        src={item.src}
        alt={item.alt}
        class="
          w-full h-full object-cover
          filter grayscale
          transition-all duration-1000 ease-in-out
          group-hover:filter-none
        "
      />
      <div
        class="
          absolute bottom-0 left-0 w-full
          bg-orange-700 text-orange-50
          p-2 text-base sm:text-lg
          min-w-full
          transform -rotate-90 origin-bottom-left
          transition-all duration-500 ease-in-out
          group-hover:rotate-0 group-hover:skew-x-[-6deg]
          group-hover:bg-orange-700 group-hover:text-orange-50 group-hover:text-2xl
          whitespace-nowrap
        "
      >
        {item.label}
      </div>
    </div>
  ))}
</div>
